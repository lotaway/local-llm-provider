Docker compose environment variables
MINIO_ROOT_USER= # default=admin
MINIO_ROOT_PASSWORD= # default=123123123
MINIO_BUCKET_NAME= # default=milvus-bucket
MINIO_PORT1= # default=9000
MINIO_PORT2= # default=9001
MILVUS_PORT1= # default=19530
MILVUS_PORT2= # default=9091

# Application environment variables
PRELOAD_MODEL= # Optional
MULTIMODAL_PROVIDER_URL= # Optional: External Multimodal Provider URL (e.g., http://localhost:11436)
MULTIMODAL_ADMIN_TOKEN= # Optional: External Multimodal Provider Admin Token, default=ADMIN_TOKEN
PRELOAD_MULTIMODAL_MODEL= # Optional
JANUS_LOAD_IN_8BIT= # Optional, default=true
PORT= # default=11435
POE_API_KEY=

LLAMA_CPP_USE_DOCKER= # Optional, default=false
LLAMA_CPP_RUN_MODE= # Optional, options: github|docker|compose
LLAMA_CPP_IMAGE= # Optional, default=rocm/llama.cpp:llama.cpp-b6356_rocm6.4.3_ubuntu24.04_full

HTTP_PROXY=

# MongoDB (Source of Truth for Documents & Chunks)
MONGO_URI= # default=mongodb://localhost:27017
MONGO_DB_NAME= # default=rag_system
MONGO_USER= # MongoDB username (optional)
MONGO_PASSWORD= # MongoDB password (optional)

# Milvus (Vector Storage)
DB_HOST= # default=localhost
DB_PORT= # default=19530
DB_COLLECTION= # default=rag_docs

# Elasticsearch (Full-text Search)
ES_HOST= # default=localhost
ES_PORT1= # default=9200
ES_API_KEY= # Generated by `docker-compose.elasticsearch-init.sh`
ES_INDEX_NAME= # default=rag_docs

MODEL_DIR= # default="./models"
DOCS_PATH= # default="./docs"
UPLOAD_DIR= # default="./uploads"
CACHE_PATH= # default="./cache"

# RAG Settings
PRE_INIT_RAG=false # If true, scan and index documents on startup if databases are empty
EMBEDDING_DEVICE=gpu # Options: gpu, cpu

# MOLT Learning - Self-evolution Settings
LEARNING=false # If true, enable memory self-evolution (decay, abstraction, version updates)

# Agent
MAX_ITERATIONS= # default=100
LLP_ENABLE_CLAUDE_GLOBAL= # default=0 (enable Claude global skills loading)
LLP_SKILLS_DIRS= # optional: colon-separated additional skill directories
LLP_CLAUDE_SKILLS_DIR= # optional: Claude global skills root directory

# Context Storage
CONTEXT_STORAGE_BACKEND= # Options: memory (default), redis, postgresql
REDIS_URL= # default=redis://localhost:6379 (for redis backend)
REDIS_CONTEXT_PREFIX= # default=agent_context: (prefix for Redis keys)
REDIS_CONTEXT_TTL= # default=0 (seconds, 0 means no expiration)
POSTGRES_URL= # PostgreSQL connection URL (for postgresql backend)

# Graph Database (Neo4j)
NEO4J_BOLT_URL= # default=bolt://localhost:7687 (bolt://neo4j:7687 in docker)
NEO4J_AUTH= # [user]/[password]

# Logging
LOG_LEVEL= # Options: DEBUG, INFO, WARNING, ERROR (default=INFO)

MAX_BATCH= # default=4 (maximum number of requests to process in parallel)
